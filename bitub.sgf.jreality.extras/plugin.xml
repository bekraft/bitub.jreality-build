<?xml version="1.0" encoding="UTF-8"?>
<?eclipse version="3.4"?>
<plugin>

   <extension
         point="org.eclipse.ui.views">
      <view
            allowMultiple="false"
            category="bitub.sgf.jreality.categoryViews"
            class="bitub.sgf.jreality.examples.views.JRealityCubeViewPart"
            icon="platform:/plugin/bitub.sgf.jreality.core/icons/jreality_logo.png"
            id="bitub.sgf.jreality.examples.views.JRealityCubeViewPart"
            name="jReality Cubes Example View"
            restorable="true">
      </view>
      <view
            allowMultiple="false"
            category="bitub.sgf.jreality.categoryViews"
            class="bitub.sgf.jreality.views.JRealityBaseSceneGraphViewPart"
            icon="platform:/plugin/bitub.sgf.jreality.core/icons/jreality_logo.png"
            id="bitub.sgf.jreality.views.JRealityBaseSceneGraphViewPart"
            name="Default jReality Scenegraph View"
            restorable="true">
      </view>      
   </extension>
   <extension
         point="org.eclipse.ui.menus">
      <menuContribution
            allPopups="false"
            locationURI="toolbar:bitub.sgf.jreality.examples.views.JRealityCubeViewPart">
         <command
               commandId="bitub.sgf.jreality.commands.resetCameraPosition"
               icon="platform:/plugin/bitub.sgf.jreality.core/icons/house_go.png"
               label="%commandResetViewPosition.0"
               style="push"
               tooltip="%commandResetViewPosition.1">
         </command>
         <command
               commandId="bitub.sgf.jreality.commands.showFaceVertices"
               icon="platform:/plugin/bitub.sgf.jreality.core/icons/points.png"
               label="%commandShowPoints.0"
               style="toggle"
               tooltip="%commandShowPoints.1">
         </command>
         <command
               commandId="bitub.sgf.jreality.commands.showFaceEdges"
               icon="platform:/plugin/bitub.sgf.jreality.core/icons/lines.png"
               label="%commandShowEdges.0 "
               style="toggle"
               tooltip="%commandShowEdges.1">
         </command>
         <command
               commandId="bitub.sgf.jreality.commands.showFacePolygons"
               icon="platform:/plugin/bitub.sgf.jreality.core/icons/faces.png"
               label="%commandShowFace.0"
               style="toggle"
               tooltip="%commandShowFace.1">
         </command>
      </menuContribution>
      <menuContribution
            allPopups="false"
            locationURI="popup:org.eclipse.ui.views.ResourceNavigator?after=additions">
         <menu
               icon="platform:/plugin/bitub.sgf.jreality.core/icons/jreality_logo.png"
               id="bitub.sgf.jreality.menu"
               label="%commandCategory.0">
               
               <command
		         commandId="bitub.sgf.jreality.commands.loadObjModel"
		         label="%commandOpenOBJ.0"
		         style="push"
		         tooltip="%commandOpenOBJ.1">
               <visibleWhen
                     checkEnabled="false">
                  <with
                        variable="selection">
                     <iterate
                           ifEmpty="false">
                        <and>
                           <adapt
                                 type="org.eclipse.core.resources.IResource">
                              <test
                                    forcePluginActivation="true"
                                    property="org.eclipse.core.resources.extension"
                                    value="obj">
                              </test>
                           </adapt>
                        </and>
                     </iterate>
                  </with>
               </visibleWhen>
            </command>
         </menu>
      </menuContribution>
	</extension>
   <extension
         point="org.eclipse.ui.commands">

      <command
            categoryId="bitub.sgf.jreality.commands.category"
            description="%commandOpenOBJ.1"
            id="bitub.sgf.jreality.commands.loadObjModel"
            name="%commandOpenOBJ.0">
      </command>         
   </extension>
   <extension
         point="org.eclipse.ui.handlers">
         
      <handler
            class="bitub.sgf.jreality.commands.CommandLoadObjModelIntoView"
            commandId="bitub.sgf.jreality.commands.loadObjModel">
      </handler>         
   </extension>   
</plugin>
